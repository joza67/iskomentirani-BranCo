@model MoveeTagEditViewModel

@{
    ViewBag.Title = "Edit tag";
}

<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-12">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h4>Uredi tag</h4>
                            </div>

<form enctype="multipart/form-data" asp-controller="MoveeTag" asp-action="Edit" method="post">
    <input hidden asp-for="Id" />
    <input hidden asp-for="CompanyId" />
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-12">
            <input class="form-control" asp-for="Name" placeholder="Naziv" />
            <span asp-validation-for="Name" class="text-danger"></span></div>
    </div>

    <div class="form-group row">
        <label asp-for="Active" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
           <input class="checkbox" asp-for="Active" placeholder="Aktivan" />
        </div>
    </div>

                                <div class="form-group">
                                    <a asp-action="Index" class="btn btn-default">Natrag</a>
                                    <input type="submit" value="Stvori" class="btn btn-default" />
                                </div>
    </form>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}
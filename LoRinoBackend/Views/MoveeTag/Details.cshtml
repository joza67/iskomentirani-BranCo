@model MoveeTagDetailsViewModel

@{
    ViewBag.Title = "Podaci o događaju";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-3">
        <div class="card">
            <div class="card-header">

            </div>

            <div class="card-body text-center">
                <hr />
                <h4>Naziv :@Model.MoveeTag.Name</h4>

            </div>
            <div class="card-footer text-center">
                    <a asp-controller="MoveeTag" asp-action="Index" class="btn btn-default">Nazad</a>
                    <a asp-controller="MoveeTag" asp-action="Edit" asp-route-id="@Model.MoveeTag.Id" class="btn btn-default m-1">Uredi</a>

                <form method="post" asp-action="DeleteMoveeTag" asp-route-id="@Model.MoveeTag.Id">
                    <span id="deleteSpan_@Model.MoveeTag.Id">
                        <button type="submit" class="btn btn-default" style="width:auto">Izbriši tag</button>
                    </span>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}

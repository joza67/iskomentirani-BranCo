@model CompanyEditViewModel
@{
    ViewBag.Title = "Edit Company";
    var photoPath = "~/Images/Company/" + (Model.ExistingPhotoPath ?? "no-photo.png");
}

<form enctype="multipart/form-data" asp-controller="Administration" asp-action="CompanyEdit" method="post" class="mt-3">
    <input hidden asp-for="Id" />
    <input hidden asp-for="ExistingPhotoPath" />
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10"><input class="form-control" asp-for="Name" placeholder="Ime" /><span asp-validation-for="Name" class="text-danger"></span></div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10"><input class="form-control" asp-for="Email" placeholder="E-pošta" /><span asp-validation-for="Email" class="text-danger"></span></div>
    </div>
    <div class="form-group row">
        <label asp-for="Street" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10"><input class="form-control" asp-for="Street" placeholder="Ulica" /><span asp-validation-for="Street" class="text-danger"></span></div>
    </div>
    <div class="form-group row">
        <label asp-for="City" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10"><input class="form-control" asp-for="City" placeholder="Grad" /><span asp-validation-for="City" class="text-danger"></span></div>
    </div>
    <div class="form-group row">
        <label asp-for="Country" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10"><input class="form-control" asp-for="Country" placeholder="Država" /><span asp-validation-for="Country" class="text-danger"></span></div>
    </div>

    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input class="form-control custom-file-input" asp-for="Photo" />
                <label class="custom-file-label">Klikni ovdje za promjenu slike...</label>
            </div>
        </div>
    </div>
    <div class="form-group row col-sm-3 offset-4">
        <div class="card">
            <div class="card-header">
                <h1>Trenutna slika</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />

            </div>
        </div>
    </div>
    <div lass="form-group row">
        <button class="btn btn-default" type="submit">Izmjeni </button>
        <a asp-controller="Administration" asp-action="ListCompanies" class="btn btn-default">Poništi </a>
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
        <script src="~/js/CustomScript.js"></script>
    }
</form>
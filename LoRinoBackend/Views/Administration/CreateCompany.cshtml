@model CompanyCreateViewModel
@{
    ViewBag.Title = "Create Company";
}

<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h4>Dodaj novu tvrtku</h4>
                            </div>
                            <form enctype="multipart/form-data" asp-controller="Administration" asp-action="CreateCompany" method="post" class="mt-3">
                                <div class="form-group row">
                                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10"><input class="form-control" asp-for="Name" placeholder="Ime" /><span asp-validation-for="Name" class="text-danger"></span></div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10"><input class="form-control" asp-for="Email" placeholder="E-pošta" /><span asp-validation-for="Email" class="text-danger"></span></div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Street" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10"><input class="form-control" asp-for="Street" placeholder="Ulica" /><span asp-validation-for="Street" class="text-danger"></span></div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="City" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10"><input class="form-control" asp-for="City" placeholder="Grad" /><span asp-validation-for="City" class="text-danger"></span></div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Country" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10"><input class="form-control" asp-for="Country" placeholder="Država" /><span asp-validation-for="Country" class="text-danger"></span></div>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <div class="custom-file">
                                            <input class="form-control custom-file-input" asp-for="Photo" />
                                            <label class="custom-file-label">Odaberi sliku...</label>
                                        </div>
                                    </div>
                                </div>
                                <div lass="form-group row">
                                    <button class="btn btn-default" type="submit">Kreiraj </button>
                                    @*<div asp-validation-summary="All" class="text-danger"></div>*@
                                </div>
                                @section Scripts {
                                    <script>
                                        $(document).ready(function () {
                                            $('.custom-file-input').on("change", function () {
                                                var fileName = $(this).val().split("\\").pop();
                                                $(this).next('.custom-file-label').html(fileName);
                                            });
                                        });
                                    </script>

                                    <script src="~/js/CustomScript.js"></script>

                                }
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model DeviceEditTypeViewModel
@{
    ViewBag.Title = "Edit Device Type";
    var photoPath = "~/Images/Devices/" + (Model.ExistingPhotoPath ?? "no-photo.png");
}

<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-3 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-9">
                        <div class="p-5">
                            <div class="text-center">
                                <h4>Edit type</h4>
                            </div>
                            <form enctype="multipart/form-data" asp-controller="DeviceType" asp-action="Edit" method="post" class="mt-3">
                                <input hidden asp-for="Id" />
                                <input hidden asp-for="ExistingPhotoPath" />
                                <div class="form-group row">
                                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10"><input class="form-control" asp-for="Name" placeholder="Name" /><span asp-validation-for="Name" class="text-danger"></span></div>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <div class="custom-file">
                                            <input class="form-control custom-file-input" asp-for="Photo" />
                                            <label class="custom-file-label">Click here to change photo...</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row col-sm-3 offset-4">
                                    <div class="card">
                                        <div class="card-header">
                                            <h1>Current photo</h1>
                                        </div>

                                        <div class="card-body text-center">
                                            <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                                        </div>
                                    </div>
                                </div>
                                <div lass="form-group row">
                                    <button class="btn btn-default" type="submit">Update </button>
                                    <a asp-controller="DeviceType" asp-action="index" class="btn btn-default">Cancel </a>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </div>
                                @section Scripts {
                                    <script>
                                        $(document).ready(function () {
                                            $('.custom-file-input').on("change", function () {
                                                var fileName = $(this).val().split("\\").pop();
                                                $(this).next('.custom-file-label').html(fileName);
                                            });
                                        });
                                    </script>
                                    <script src="~/js/CustomScript.js"></script>
                                }
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
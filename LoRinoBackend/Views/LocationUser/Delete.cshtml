@model LocationUser
@{
    ViewData["Title"] = "Delete";
}

<h2>Jeste li sigurni?</h2>
<br />
<p>
    Lokacija: @Model.LocationName
</p>
<br />
<p>
    Korisnik: @Model.UserName
</p>
<br />

<form asp-action="DeleteLocationUser">
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="submit" value="Delete" class="btn btn-default" />
</form>
<a asp-action="Index" asp-route-locationId="@Model.LocationId">Natrag</a>
@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}
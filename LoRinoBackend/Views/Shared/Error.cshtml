@{
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}

@{
    ViewBag.Title = "User Login";
}
<div class="row justify-content-center display-1 text-white">Ooops</div>
<!-- Outer Row -->
<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-terminal-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4"></h1>
                            </div>

                            @if (ViewBag.ErrorTitle == null)
{
                            <h3>
                                <br />Dogodila se pogreška prilikom izvođenja zahtjeva. Molim vas pokušajte kasnije.
                            </h3>
}
else
{
                            <h1 class="text-danger">@ViewBag.ErrorTitle</h1>
                            <h6 class="text-danger">@ViewBag.ErrorMessage</h6>
}


                            <hr>
                            <div class="text-center">
                                <a asp-action="" asp-controller="movee" class="small">Povratan na naslovnicu?</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

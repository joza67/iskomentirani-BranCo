@model LoRinoBackend.Models.MoveeEventComment

@{
    ViewData["Title"] = "CommentEdit";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CommentEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="MoveeEventFrameId" />
            <input type="hidden" asp-for="EventCommentTime" />
            <input type="hidden" asp-for="EventCommentBy" />
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-eventId="@Model.MoveeEventFrameId">Natrag</a>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

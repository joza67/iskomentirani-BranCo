@model IEnumerable<LocationUser>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" asp-route-userId="@ViewBag.UserId" class="btn btn-sm btn-secondary">Dodjeli lokaciju</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>Location Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.LocationName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" asp-route-userId="@ViewBag.UserId">Uredi</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" asp-route-userId="@ViewBag.UserId">Obriši</a>

                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="ListUsers" asp-controller="Administration" class="btn btn-sm btn-secondary">Natrag na korisnike</a>
</p>
@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}